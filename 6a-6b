function capitalizeWords(str)
{
  return str.replace(/\b\w/g, function(char)
   {
    return char.toUpperCase();
  });
}

const sentence =prompt("enter the string");
console.log("Original Sentence: " + sentence);
console.log("Capitalized Words: " + capitalizeWords(sentence));






<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        function onc()
        {
            alert("HI Tejas here!!!");
        }
    </script>
    <div><button onclick="onc()">Onclick button</button></div>
    <div><button onmouseover="onc()">Onmouseover button</button></div>
    <div><button onmouseout="onc()">Onmouseout button </button></div>
    <div><button onkeydown="onc()">Onkeydown button</button></div>
    <div>
    <select onchange="onc()">
        <option>Apple</option>
        <option>Orange</option>
        <option>mango</option>
        <option>banana</option>
        <option>Guava</option>
        
    </select></div>
    
</body>

</html>










<!DOCTYPE html>
<html>
<head>
  <title>Event Demo</title>
</head>
<body>
  <h1>Event Demo</h1>

  <button onclick="console.log('Button clicked!')">Click Me</button>

  <div onmouseover="console.log('Mouse over the element!')" onmouseout="console.log('Mouse left the element!')">
    Hover over me
  </div>

  <input type="text" onchange="console.log('Input value changed:', this.value)">

  <script>
    document.addEventListener('keydown', event => {
      console.log('Key pressed:', event.key);
    });
  </script>
</body>
</html>







